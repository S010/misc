fontname "DejaVu Sans Mono:style=bold:size=12"
color activeborder PaleGreen2
color inactiveborder PaleGreen4
color font PaleGreen2
color menufg PaleGreen2
color menubg black
snapdist 5
moveamount 5
borderwidth 1

bind M-period unmap
bind M-comma ssh

bind M-Prior "amixer sset Master 3%+"
bind M-Next "amixer sset Master 3%-"
bind M-End "amixer sset Master toggle"
bind XF86AudioRaiseVolume "amixer sset Master 3%+"
bind XF86AudioLowerVolume "amixer sset Master 3%-"
bind XF86AudioMute "amixer sset Master toggle"
